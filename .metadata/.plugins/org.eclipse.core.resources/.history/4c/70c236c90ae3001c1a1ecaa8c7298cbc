def numCaracteres(cadena, caracter):
    contador=0
    for i in range(0, len(cadena)):
        if caracter==cadena[i]:
            encontrado=True
        if encontrado==True:
            contador+=1

    
    return contador

print(numCaracteres("holah", "h"))
