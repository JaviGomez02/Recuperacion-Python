def numCaracteres(cadena, caracter):
    contador=0
    encontrado=False
    for i in range(0, len(cadena)):
        if encontrado:
            contador+=1
            if caracter=cadena[i]:
                encontrado=False
        if caracter==cadena[i]:
            encontrado=True
        

    return contador

print(numCaracteres("hooh", "h"))
