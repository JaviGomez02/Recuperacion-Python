vectorMaxima=[]
vectorMinima=[]
for i in range(0, 5):
    tempMax=int(input("Introduce la temperatura maxima: "))
    tempMin=int(input("Introduce la temperatura minima: "))
    vectorMaxima.append(tempMax)
    vectorMinima.append(tempMin)

for i in range (0, 5):
    media=(vectorMaxima[i]+vectorMinima[i])/2
    print("La temperatura media del dia "+str(i)+" es de "+str(media)+" grados.")